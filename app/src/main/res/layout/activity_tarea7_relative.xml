<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:background="@color/black"
    android:id="@+id/root"

    >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/titletext"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Relative Layout"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:textSize="80sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/belowtitletext"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titletext"
        android:text="Todo es relativo, este siempre estara por debajo del titulo, por ejemplo."
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <TextView
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:maxWidth="200sp"
        android:textSize="20sp"
        android:text="Aun que rotes el telefono deberia verse mayormente igual"
        android:background="@color/white"
        android:id="@+id/topleftsquare"
        android:layout_below="@id/belowtitletext"
        />

    <TextView
        android:id="@+id/toprightsquare"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/topleftsquare"
        android:layout_below="@+id/belowtitletext"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:maxWidth="100sp"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:text="Eso no significa que se vea bien en landscape y portrait"
        android:textSize="20sp"

        />
    <TextView
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La palabra clave siendo 'Mayormente'"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:layout_below="@id/toprightsquare"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Relative Layout"
        android:layout_margin="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:id="@+id/relativebutton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Grid Layout"
        android:layout_margin="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:id="@+id/gridbutton"

        />

</RelativeLayout>